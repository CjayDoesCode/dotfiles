{
    "layer": "top",
    "position": "top",
    "modules-left": ["hyprland/workspaces"],
    "modules-right": ["network", "pulseaudio", "battery", "clock"],
    "hyprland/workspaces": {
        "format": "",
        "persistent-only": true,
        "persistent-workspaces": {
            "*": 5
        }
    },
    "network": {
        "format": "",
        "tooltip": true,
        "tooltip-format": "{ipaddr}"
    },
    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "",
        "format-icons": ["", "", ""],
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "{volume}%"
    },
    "battery": {
        "format": "{icon}",
        "format-icons": ["", "", "", "", ""],
        "tooltip": true,
        "tooltip-format": "{capacity}%"
    },
    "clock": {
        "format": "{:%R}",
        "tooltip": true,
        "tooltip-format": "{:%A, %B %d, %Y}"
    },
}
