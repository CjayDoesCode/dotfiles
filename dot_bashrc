[[ $- != *i* ]] && return

. /usr/share/git/completion/git-prompt.sh

PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$ '

export EDITOR=helix
export HISTCONTROL="erasedups:ignorespace"
export TERMINAL=alacritty

shopt -s autocd

alias edit='helix'
alias grep='grep --color=auto'
alias ll='ls -lah --color=auto'
alias ls='ls --color=auto'
